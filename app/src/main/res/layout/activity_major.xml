<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_major"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:context="com.example.elmclean.csdepartment.Major">

    <TextView
        android:text="Majors"
        android:textSize="24sp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/majors"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

    <RadioButton
        android:text="Computer Information Systems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/major1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />

    <RadioButton
        android:text="Computer Science"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/major2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />

    <TextView
        android:text="Minors"
        android:textSize="24sp"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/minors"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

    <RadioButton
        android:text="Computer Information Systems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minor1"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />

    <RadioButton
        android:text="Computer Science"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minor2"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />

    <RadioButton
        android:text="Cybersecurity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minor3"
        android:layout_marginLeft="@dimen/activity_horizontal_margin" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/button" />

    <Button
        android:text="Button"
        android:layout_gravity="right"
        android:layout_width="200px"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/button2" />
</LinearLayout>

